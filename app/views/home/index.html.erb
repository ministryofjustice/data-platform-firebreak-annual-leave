<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<p>
	<%= User.first.email %>
</p>
<%= link_to "Add Leave", "/leave_periods" %>
<br></br>

<%= stylesheet_link_tag "calendar" %>
<%= month_calendar(events: @leave_periods) do |date, leave_periods| %>
  <%= date %>

  <% leave_periods.each do |leave_period| %>
    <div>
      <%= leave_period.name %>
    </div>
  <% end %>
<% end %>

<p>
	<%= govuk_button_to( "Log Out", destroy_user_session_path, method: :delete ) %>
</p>
