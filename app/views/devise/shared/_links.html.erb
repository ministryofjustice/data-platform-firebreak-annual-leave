<%- if controller_name != 'sessions' %>
  <a class="govuk-link govuk-button govuk-button--primary" href="<%= new_session_path(resource_name) %>">Log in</a>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <a class="govuk-link govuk-button govuk-button--primary" href="<%= new_registration_path(resource_name) %>">Sign up</a>
<% end %>

