  <%# ">Forgot your password?</a> %>
<%# <% end %> 

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <a class="govuk-link" href="<%= new_confirmation_path(resource_name) %>">Didn't receive confirmation instructions?</a>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <a class="govuk-link" href="<%= new_unlock_path(resource_name) %>">Didn't receive unlock instructions?</a>
<% end %>

<%- if Rails.env.development? %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in using EntraID (Development)", omniauth_authorize_path(resource_name, provider), class: "govuk-button", data: { turbo: false } %>
    <% end %>
  <% end %>
<% end %>

<%- if Rails.env.production? %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "govuk-button", data: { turbo: false } %>
    <% end %>
  <% end %>
<% end %>