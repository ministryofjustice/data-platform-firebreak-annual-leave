<h2 class="govuk-heading-l">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="govuk-form-group">
    <%= f.label :email, class: "govuk-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "govuk-input" %>
  </div>

  <div class="govuk-form-group">
    <%= f.submit "Send me reset password instructions", class: "govuk-button govuk-button--primary" %>
  </div>
<% end %>

<%= link_to "Back", new_user_session_path, class: "govuk-back-link" %>
